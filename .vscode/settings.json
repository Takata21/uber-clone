{
  "files.eol": "\n",
  "prettier.endOfLine": "lf",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "errorLens.sourceColor": {
  "eslint": "#FF8800",         // Linter (por ejemplo, ESLint): naranja
  "typescript": "#FF0000",     // Errores de TypeScript: rojo
  "python": "#FF0000",         // Para Python (si usas PyLance, etc.)
  "default": "#CCCCCC"         // Cualquier otra fuente
}

}
